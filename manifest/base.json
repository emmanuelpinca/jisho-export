{
  "manifest_version": 3,
  "name": "Jisho Export",
  "version": "0.0.6",
  "description": "Saves and exports Jisho definitions",
  "action": {
    "default_popup": "index.html",
    "default_icon": "logo.png"
  },
  "icons": {
    "500": "logo.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "permissions": ["storage", "scripting", "cookies"],
  "host_permissions": ["https://jisho.org/*"],
  "content_scripts": [
    {
      "matches": ["https://jisho.org/*"],
      "js": ["assets/contentScript.js"]
    }
  ]
}
